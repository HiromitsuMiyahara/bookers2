<div class="container">
  <div class="row">
    <div>
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <label for="user_idName">Name</label>
        <%= f.text_field :name %>
        <label for="user_Image">Image</label>
        <%= f.file_field :profile_image,accept: "image/*" %>
        <label for="user_Introduction">Introduction</label>
        <%= f.text_area :introduction %>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>