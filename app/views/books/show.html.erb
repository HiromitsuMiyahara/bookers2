<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>

      <%= render 'users/userinfo', user: @book.user %>

      <%= render 'new', book: @book_new %>
      </div>
      <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
        <table class='table table-hover table-inverse'>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to @book.title, book_path(@book.id) %>
              </td>
              <td><%= @book.body %></td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book.id) %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                 <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
                <% end %>
              </td>
              <td>
                <% if @book.favorited_by?(current_user) %>
                <p>
                  <%= link_to book_favorites_path(@book), method: :delete do %>
                    ♥<%= @book.favorites.count %>
                  <% end %>
                </p>
                <% else %>
                <p>
                  <%= link_to book_favorites_path(@book), method: :post do %>
                    ♡<%= @book.favorites.count %>
                  <% end %>
                </p>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <div>
          <% @book.book_comments.each do |book_comment| %>
            <p>
              <%= image_tag book_comment.user.get_profile_image(100,100) %><%= book_comment.comment %>
              <% if book_comment.user == current_user %>
                 <%= link_to "Destroy", book_book_comment_path(book_comment.id), method: :delete %>
              <% end %>
            </p>
            <%= link_to book_comment.user.name, user_path(book_comment.user.id) %>
          <% end %>
        </div>
        <div>
          <%= form_with model: [@book, @book_comment] do |f| %>
            <%= f.text_area :comment, cols: '80', rows: '5', placeholder: "コメントをここに" %>
            <%= f.submit "送信" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>