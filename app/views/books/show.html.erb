<main>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
      <%= render 'users/userinfo', user: @user %>

      <%= render 'new', book: @book %>
      </div>
      <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
        <table class='table table-hover table-inverse'>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.get_profile_image(100,100) %>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to @book_id.title, book_path(@book_id.id) %>
              </td>
              <td><%= @book_id.body %></td>
              <td>
                <% if @book_id.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book_id.id) %>
                <% end %>
              </td>
              <td>
                <% if @book_id.user == current_user %>
                 <%= link_to "Destroy", book_path(@book_id.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>