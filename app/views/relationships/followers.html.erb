<h2>Follower Users</h2>
<% if @users.exists? %>
<!--exists?=存在するか？という意味。今回はフォローしているユーザーはいるかいないか。-->
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td>フォロー数: <%= user.followings.count %></td>
      <td>フォロワー数: <%= user.followers.count %></td>
      <td><%= link_to "Show", user_path(user) %></td>
    </tr>
  <% end %>
<% else %>
      <p>ユーザーはいません</p>
<% end %>
  </tbody>
</table>